.notice= flash[:success]
.notice= flash[:error]

%a{href: new_company_path} New Company
- if user_signed_in?
	= link_to "Sign out", destroy_user_session_path, method: :delete
- else
	%a{href: new_user_session_path} Sign in

%br

.index-col
	%ul.results
	- @companies.each do |co|
		%li.result
			.result-photo
				%img.logo{src: co.avatar.url}
			.result-info
				%a{:href => "javascript:void(0)", :onclick => "new google.maps.event.trigger(marker#{co.id}, 'click');"} #{co.name}
				= co.status == nil ? "" : "(#{co.status})"
				= link_to "View", co, target: :blank
				%br
				#{co.location}

#map-canvas.index-col


:javascript
	var myLatlng = new google.maps.LatLng(#{@companies.last.latitude},#{@companies.last.longitude});
	var mapOptions = {
	  zoom: 16,
	  center: myLatlng
	};
	var map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);


- @companies.each do |co|
	:javascript
		function initialize() {
			var myLatlng#{co.id} = new google.maps.LatLng(#{co.latitude},#{co.longitude});
			
			var contentString = 
			'<div class="marker-info-win">'+
					'<div class="marker-inner-win" style="width:200px;"><span class="info-content">'+
					'<h1 class="marker-heading">#{co.name}</h1>'+
					'#{co.location}'+ 
					'</span>'+
					'</div></div>';
		  
			var infowindow = new google.maps.InfoWindow({
				content: contentString
			});
		  
			window.marker#{co.id} = new google.maps.Marker({
				position: myLatlng#{co.id},
				map: map,
				title: '#{co.name}',
				animation: google.maps.Animation.DROP
			});
			google.maps.event.addListener(marker#{co.id}, 'click', function() {
				infowindow.open(map,marker#{co.id});
				map.setZoom(17);
				map.setCenter(marker#{co.id}.getPosition());
			});
			
			
		  }
		  
		google.maps.event.addDomListener(window, 'load', initialize);

