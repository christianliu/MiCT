.sign{style: "height:200%; background: url(/assets/capetown_3.jpg)"}
    .sign-box
        %h1 Basic information
        = render 'form'
        %br
        %br
        %h1 Profile information
        = form_for @company do |f|
            %ul
                %li
                    = f.label(:website, "Website: ")
                    = f.text_field(:website)
                %li
                    = f.label(:email, "Email: ")
                    = f.email_field(:email)
                %li
                    = f.label(:phone, "Phone: ")
                    = f.text_field(:phone)
                %li
                    = f.label(:hours, "Hours: ")
                    = f.text_field(:hours)
                %li
                    = f.submit("Save", class: "button") 
        %br
        %br
        %h1 Description
        = form_for @company do |f|
            %ul
                %li
                    = f.label(:info, "About: ")
                    %br
                    = f.text_area(:info, style: "width:100%; height:200px;")
            %ul
                %li.select2
                    = f.label(:technology_ids, "Technologies: ")
                    %br
                    = f.select(:technology_ids, options_from_collection_for_select(@company.technologies, "id", "name"),{:include_blank => true}, multiple: true, style: "width:100%;", id: "select2")
            %ul
                %li
                    = f.submit("Save", class: "button")
        %br
        = link_to 'Back', @company

:javascript
    $(document).ready(function() { $("#select2").select2( {
          allowClear: true,
          placeholder: 'Select type question'
    }); });
