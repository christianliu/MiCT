%h1 Edit company

= render 'form'

= form_for @company do |f|
	%ul
		%li
			= f.label(:website, "Website: ")
			= f.text_field(:website)
		%li
			= f.label(:email, "Email: ")
			= f.email_field(:email)
		%li
			= f.label(:phone, "Phone: ")
			= f.text_field(:phone)
		%li
			= f.label(:hours, "Hours")
			= f.text_field(:hours)
		%li
			= f.submit("Save")

= form_for @company do |f|
	= f.label(:technology, "Technologies: ")
	= f.text_field(:technology)
	= f.submit("Save")

= link_to 'Back', @company

