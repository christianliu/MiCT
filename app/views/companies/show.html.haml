%nav

- if user_signed_in? && (current_user.id == @company.user_id)
	= link_to "Edit Profile", edit_company_path

%section.profile
	.header.info
		.prof-head
			%img.prof(src="#{@company.avatar.url}")
			%h1= @company.name
			company type
		.description= @company.info

		%ul.basic-info
			%li
				%img.logo{src: @company.avatar.url(:thumb)}
				// ICON
				.text= @company.website
			%li
				%img.logo{src: @company.avatar.url(:thumb)}
				// ICON
				.text= @company.email
			%li
				%img.logo{src: @company.avatar.url(:thumb)}
				// ICON
				.text= @company.phone
			%li
				%img.logo{src: @company.avatar.url(:thumb)}
				// ICON
				.text= @company.hours
			%li
				%img.logo{src: @company.avatar.url(:thumb)}
				// ICON
				.text= @company.size

		%hr
		%nav
			%a{href: "#map"} Location 
			|
			%a{href: "#about"} About
			|
			%a{href: "#tech"} Technologies
			|
			%a{href: "#similar"} Similar Companies

#map{frameborder: "0", style: "border:0; height:500px;", width: "100%"}

#about.info.profile
	%h1 About
	#tech.info
		= @company.info
		%h1 Technologies
		%ul
		- @company.technologies.each do |t|
			%li #{t.name}
	#similar.info
		%h1 Similar Companies
		%p

